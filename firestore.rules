rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Products: Read for all, Write for admin
    match /products/{product} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories: Read for all, Write for admin
    match /categories/{category} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Supermarkets: Read for all, Write for admin
    match /supermarkets/{supermarket} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Prices: Read for all, Create for auth users, Update/Delete for admin
    match /prices/{price} {
      allow read: if true;
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }
    
    // Submissions: Users create, Admins review
    match /submissions/{submission} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }

    // Product Submissions: Users create, Admins review
    match /product_submissions/{submission} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }
    
    // Admin Access Logs: Admins create
    match /admin_access_logs/{log} {
      allow create: if isAuth();
      allow read: if isAdmin();
    }
    
    // Allow admins to read all users for stats
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.auth.uid == userId;
      allow update: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
  }
}
